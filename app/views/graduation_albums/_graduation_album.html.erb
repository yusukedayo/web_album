<div class="p-4 shadow-lg rounded-lg pt-6">
  <%= link_to graduation_album_path(graduation_album), class:"group h-96 block bg-gray-100 rounded-lg overflow-hidden shadow-lg mb-2 lg:mb-3" do %>
    <%= image_tag 'album.jpg', class:"w-full h-full object-cover object-center  transition duration-200"%>
  <% end %>
  <div class="flex justify-between">
    <div class="flex flex-col text-left">
      <%= link_to graduation_album.album_name, graduation_album_path(graduation_album), class: "text-gray-800 hover:text-gray-500 text-lg lg:text-xl font-bold transition duration-100"%>
      <%= l graduation_album.created_at %>
    </div>
    <div class="flex">
      <% if current_user.own?(graduation_album) %>
        <%= link_to edit_graduation_album_path(graduation_album), class: "text-gray-800 hover:text-gray-500 text-lg lg:text-xl p-2 font-bold transition duration-100" do %>
          <i class="fa-solid fa-pen-to-square fa-lg"></i>
        <% end %>
        <%= link_to graduation_album_path(graduation_album), method: :delete, id: "delete_button", data: {confirm: "本当に削除しますか？"},  class: "text-gray-800 hover:text-gray-500 text-lg lg:text-xl p-2 font-bold transition duration-100" do %>
          <i class="fa-solid fa-trash-can fa-lg"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>