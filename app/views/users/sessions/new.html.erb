<div class='hero min-h-screen bg-base-200'>
  <div class='hero-content flex-col lg:flex-row-reverse'>
    <div class='text-center lg:text-left'>
      <h1 class='text-5xl font-bold'>ログイン</h1>
      <p class='py-6'>ログインしてもっとこのアプリを楽しみましょう</p>
    </div>
    <div class='card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100'>
      <div class='card-body'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :email, class: 'label-text' %><br />
            </label>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'email', class: 'input input-bordered' %>
          </div>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :password, class: 'label-text' %><br />
            </label>
            <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'password', class: 'input input-bordered' %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class='field'>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <label class='label'>
            <%= render 'users/shared/links', class:'label-text-alt link link-hover' %>
          </label>
          <div class='form-control mt-6'>
            <%= f.submit 'ログイン', class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

