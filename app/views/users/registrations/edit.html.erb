<div class='hero min-h-screen bg-base-200'>
  <div class='hero-content flex-col lg:flex-row-reverse'>
    <div class='card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100'>
      <div class='card-body'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shared/error_messages", resource: resource, object: f.object %>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :name, class: 'label-text' %><br />
            </label>
            <%= f.text_field :name, autofocus: true, placeholder: 'name', class: 'input input-bordered' %>
          </div>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :avatar, class: 'label-text' %><br />
            </label>
            <div class="w-24 md:w-32 h-24 md:h-32 self-center bg-gray-100 rounded-full overflow-hidden shadow-lg mb-2 md:mb-4">
              <%= image_tag current_user.avatar.to_s %>
            </div>     
            <%= f.file_field :avatar %>
          </div>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :email, class: 'label-text' %><br />
            </label>
            <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'input input-bordered' %>
          </div>
          <div class='form-control mt-6'>
            <%= f.submit '編集', class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>