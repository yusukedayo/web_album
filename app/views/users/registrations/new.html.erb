<div class='hero min-h-screen bg-base-200'>
  <div class='hero-content flex-col lg:flex-row-reverse'>
    <div class='text-center lg:text-left'>
      <h1 class='text-5xl font-bold'>新規登録</h1>
      <p class='py-6'>新規登録してもっとこのアプリを楽しみましょう</p>
    </div>
    <div class='card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100'>
      <div class='card-body'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/error_messages", object: f.object, resource: resource %>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :name, class: 'label-text' %><br />
            </label>
            <%= f.text_field :name, autofocus: true, placeholder: 'name', class: 'input input-bordered' %>
          </div>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :avatar, class: 'label-text' %><br />
            </label>
            <%= f.file_field :avatar, class: 'input input-bordered' %>
          </div>
          <div class='form-control'>
            <label class='label'>
              <%= f.label :email, class: 'label-text' %><br />
            </label>
            <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'input input-bordered' %>
          </div>
          <div class="field">
            <label class='label'>
              <%= f.label :password, class: 'label-text' %><br />
            </label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'password', class: 'input input-bordered' %>
          </div>
          <div class="field">
            <label class='label'>
              <%= f.label :password_confirmation, class: 'label-text' %><br />
            </label>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'password_confirmation', class: 'input input-bordered' %>
          </div>
          <label class='label'>
            <%= render 'users/shared/links', class:'label-text-alt link link-hover' %>
          </label>
          <div class='form-control mt-6'>
            <%= f.submit '登録', class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>