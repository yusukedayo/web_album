<% breadcrumb :menber_show, @graduation_album, @menber %>
<h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6 underline">メンバー</h2>
<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-16">
      <div class='flex justify-center'>
        <div class=" w-24 md:w-32 h-24 md:h-32 bg-gray-100 rounded-full overflow-hidden shadow-lg mb-2 md:mb-4">
          <%= image_tag current_user.avatar.to_s %>
        </div>
      </div>
      <p class="text-3xl my-6 text-center dark:text-white">
                    <%= @menber.name %>
                    <%= link_to '写真の取得', graduation_album_menber_register_faces_path(@graduation_album, @menber), method: :post, class: "text-gray-800 hover:text-gray-500 text-lg lg:text-xl font-bold transition duration-100" %>
                </p>
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 md:gap-5 xl:gap-2">
                  <% if @mathed_face_images && @mathed_face_images.count != 0 %>
                        <% @mathed_face_images.each do |image| %>
                          <%= image_tag image , size: '240x240'%>
                        <% end %> 
                  <% end %>
                </div>
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center pt-4 mb-4 md:mb-6 underline">メンバーからのメッセージ</h2>
    </div>
    <%= render 'message_for_each_menbers/message_for_each_menbers', { message_for_each_menbers: @message_for_each_menbers } %>
    <%= render 'message_for_each_menbers/form', { graduation_album: @graduation_album, message_for_each_menber: @message_for_each_menber, menber: @menber } %>
  </div>
</div>